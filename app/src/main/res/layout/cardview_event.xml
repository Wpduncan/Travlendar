<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/cv_header"
            android:foreground="@color/colorPrimary"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/cv_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:text="Event Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_event_name"
                android:paddingRight="20dp"
                android:text="Date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_event_name"
                android:layout_toEndOf="@id/cv_date"
                android:layout_toLeftOf="@+id/cv_to"
                android:text="StartTime"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_event_name"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/cv_start_time"
                android:layout_toRightOf="@id/cv_start_time"
                android:layout_toLeftOf="@+id/cv_end_time"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="to"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_event_name"
                android:layout_alignParentRight="true"

                android:layout_toEndOf="@+id/cv_to"
                android:text="EndTime"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>